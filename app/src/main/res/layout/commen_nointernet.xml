<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_background">

        <emerge.project.mrsolution_micro.ui.fonts.MontserratLight
            android:id="@+id/montserratLight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/montserratLight"
            android:layout_centerHorizontal="true"
            android:text="Check your Connection"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <emerge.project.mrsolution_micro.ui.fonts.MontserratLight
            android:id="@+id/montserratLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/montserratSemiBold"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="No Internet Connection found"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <emerge.project.mrsolution_micro.ui.fonts.MontserratSemiBold
            android:id="@+id/montserratSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout123"
            android:layout_centerHorizontal="true"
            android:text="Ooops !"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/relativelayout123"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/relativelayout123"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_nointernet" />


        <emerge.project.mrsolution_micro.ui.fonts.MontserratRegularButton
            android:id="@+id/btn_tryagin"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/montserratLight2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_selector_blue"
            android:text="Try Again"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>