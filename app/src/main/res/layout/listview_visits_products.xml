<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardViewStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_header_main"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:elevation="5dp">

        <emerge.project.mrsolution_micro.ui.fonts.MontserratMedium
            android:id="@+id/textview_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/imageView_product"
            android:layout_toRightOf="@+id/imageView_product"
            android:text="Wellteen"
            android:textColor="@color/colorPrimaryDark" />


        <ImageView
            android:id="@+id/imageView_product"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_product_defult_small"/>


      <!--  <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageView_product"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_product_defult_small"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp"
            app:civ_shadow="false" />-->

    </RelativeLayout>

</android.support.v7.widget.CardView>


